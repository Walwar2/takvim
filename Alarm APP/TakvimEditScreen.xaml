<Window x:Class="Alarm_APP.TakvimEditScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TakvimEditScreen" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Calendar x:Name="calendar" SelectedDatesChanged="Calendar_SelectedDatesChanged"/>

        <DataGrid x:Name="dataGrid" Grid.Row="0" Margin="10,197,10,10" AutoGenerateColumns="True"/>

        <Button x:Name="editButton" Grid.Row="1" Content="Kaydet" Click="EditButton_Click" HorizontalAlignment="Center" Margin="10"/>
    </Grid>
</Window>
